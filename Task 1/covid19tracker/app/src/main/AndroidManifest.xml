<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zobaer53.covid19tracker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/covid"
        android:label="@string/app_name"
        android:roundIcon="@drawable/covid"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.zobaer53.covid19tracker.activities.splashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.zobaer53.covid19tracker.activities.DetailActivity" />
        <activity
            android:name="com.zobaer53.covid19tracker.activities.HomeActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name="com.zobaer53.covid19tracker.activities.MainActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>